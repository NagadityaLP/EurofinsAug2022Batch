@model IEnumerable<KnowledgeHubPortalProject.Models.Entities.Article>

@{
    ViewBag.Title = "Review";
}

<h2>Review Articles</h2>
<h3>@TempData["Message"]</h3>
<form method="post" >
<table class="table">
    <tr>
        <th>
            Review
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSubmited)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                <input type="checkbox" name="articleIds" value="@item.ArticleID" />
            </td>
            <td>
                <a href="@item.Url" target="_blank">@item.Title</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateSubmited)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArticleID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ArticleID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArticleID })
            </td>
        </tr>


    }

</table>
    <input type="submit" formaction="/Articles/Approve" name="name" value="Approve" />
    <input type="submit" formaction="/Articles/Reject" name="name" value="Reject" />
 </form>