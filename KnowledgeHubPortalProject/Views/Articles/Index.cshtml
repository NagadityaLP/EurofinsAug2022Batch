@model IEnumerable<KnowledgeHubPortalProject.Models.Entities.Article>
@using Humanizer;

@{
    ViewBag.Title = "Index";
}

<h2>Browse Articles</h2>
<hr />
<form action="/Articles/Index" method="post">
    Search Articles
    <input type="text" name="data" />
    <input type="submit" name="btnSearch" value="Search Articles" />
</form>

<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Url)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.PostedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSubmited)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @* @Html.DisplayFor(modelItem => item.Title)*@
                <a href=@item.Url target="_blank">@item.Title</a>
            </td>
            @* <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IsApproved)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PostedBy)
            </td>

            <td>
                @{
                    var date = (item.DateSubmited - DateTime.Now);
                }
                @Html.DisplayFor(modelItem => item.DateSubmited)
            </td>
            @* <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ArticleID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ArticleID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ArticleID })
                </td>*@
        </tr>
    }

</table>
